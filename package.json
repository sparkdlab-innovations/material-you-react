{
  "name": "material-you-react",
  "version": "0.0.1",
  "description": "A complete UX library based on Google's Material Design 3 (Material You) for React-based applications.",
  "author": "Rutaj Dash (rutajdash)",
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/rutajdash/material-you-react#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rutajdash/material-you-react.git"
  },
  "bugs": {
    "url": "https://github.com/rutajdash/material-you-react/issues"
  },
  "keywords": [
    "material",
    "material design",
    "material ui",
    "material next",
    "material you",
    "material design 3",
    "md3",
    "next.js",
    "nextjs",
    "react",
    "reactjs",
    "react.js",
    "react components",
    "react ui",
    "next ui",
    "next components"
  ],
  "readme": "README.md",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "test": "jest --config jest.config.json",
    "build": "npm build:esm && npm build:cjs",
    "build:watch": "tsc -p tsconfig.json --watch",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.json --module commonjs --outDir dist/cjs",
    "style": "prettier --write \"{lib,tests,example}/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "npm run test && npm run build",
    "prepublishOnly": "npm run style && npm run lint && npm run test && npm run build"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.46",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
